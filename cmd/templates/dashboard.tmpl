	  url = "/static/video/" + data.name
      layer.confirm('删除确认', function(index){
		layer.close(index);
      });
    } else if(obj.event === 'edit'){
      layer.alert('编辑行：<br>'+ JSON.stringify(data))
    }
  });

  upload.render({
    elem: '#uploadVideo'
    ,url: ''
    ,accept: 'video' 
    ,done: function(res){
      layer.msg('上传成功');
    }
  });

});
</script>
</body>